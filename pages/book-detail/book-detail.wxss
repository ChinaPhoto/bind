.ex-class1 {
    background-color: #fffddd !important;
}

.ex-class2 {
    background-color: #eefbff !important;
}

.posting-containter {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 9999;
    background-color: #fff;
}

.post-header {
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.cancel {
    color: #666;
}

.post-header text {
    padding: 25rpx;
}

.post-header>text:first-child {
    font-size: 28rpx;
    color: #bbb;
}

.posting-inercont{
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx 30rpx 0 30rpx;
}

.post {
    width: 100%;
    margin: 30rpx auto;
    height: 56rpx;
    box-sizing: border-box;
    background-color: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
}

.shadow {
    color: #999;
}