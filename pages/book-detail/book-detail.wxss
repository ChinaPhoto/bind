/* pages/book-detail/book-detail.wxss */

.container {
    background-color: #f5f5f5;
    width: 100%;
}

.head {
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.author {
    font-size: 28rpx;
    color: #999;
    /* margin-bottom: 30rpx; */
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
    box-sizing: border-box;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.content-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.content-container h-tag {
    margin-left: 15rpx;
    margin-bottom: 10rpx;
}

.num {
    margin-left: 10rpx;
    font-size: 22rpx;
    color: #aaa;
}

.content {
    text-indent: 58rpx;
    font-size: 28rpx;
    color: #666;
    font-weight: 500
}

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-bottom: 100rpx;
    font-size: 24rpx;
    color: #999;
}

.vertical {
    display: flex;
    flex-direction: column;
}

.description {
    color: #666;
    margin-right: 30rpx;
}

.post-container {
    width: 100%;
    height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    background-color: #fff;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

.post-fake {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 60rpx;
    width: 460rpx;
    border: 1px solid #999;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left: 20rpx;
}

.like {
    margin-right: 30rpx;
    margin-top: 10rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
