/* pages/book-detail/book-detail.wxss */

.container {
    background-color: #f5f5f5;
    width: 100%;
}

.head {
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.author {
    font-size: 28rpx;
    color: #999;
    /* margin-bottom: 30rpx; */
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
    box-sizing: border-box;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.content-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.content-container h-tag {
    margin-left: 15rpx;
    margin-bottom: 10rpx;
}

.num {
    margin-left: 10rpx;
    font-size: 22rpx;
    color: #aaa;
}

