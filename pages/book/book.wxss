/* pages/book/book.wxss */
.container {
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;

}

.header {
    position: fixed;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 3px #e3e3e3;
    z-index: 99;
}


.box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    background-color: #f5f5f5;
    height: 68rpx;
    width: 700rpx;
    color: #999999;
}

.box image {
    margin-right: 10px;
    width: 14px;
    height: 14px;
    margin-bottom: -2px;
}

.box text {
    font-size: 28rpx;
}

.sub-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 100rpx;
}

.sub-content image {
    width: 106rpx;
    height: 34rpx;
    margin-top: 40rpx;
}

.books-container {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 90rpx;
}
.books-container v-book{
    margin-bottom: 10rpx;
}
